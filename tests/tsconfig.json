{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "out": "www/test/bundle.js",
    // "types": ["mocha", "chai"],
    "sourceRoot": "../"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}